# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{COMMIT,TAG}_EDITMSG]
max_line_length = 72

[{*.jhm, *.xslt, *.xul, *.rng, *.xsl, *.xsd, *.ant, *.tld, *.fxml, *.jrxml, *.xml, *.jnlp, *.wsdl}]
indent_size = 4
max_line_length = 100

[*.java]
indent_size = 4
max_line_length = 100

[*.properties]
indent_size = 4
max_line_length = 100

[.editorconfig]
indent_size = 4

[{*.gy, *.groovy, *.gant, *.gradle, *.gdsl}]
indent_size = 4
max_line_length = 100

[{*.kts, *.kt}]
indent_size = 4
max_line_length = 100
